with "aunit.gpr";

project TextProcs is

   for Source_Dirs use ("src", "src/tests");
   for Object_Dir use "obj";
   for Main use ("main.adb");

   package Linker is
      for Switches ("ada") use ("obj/stbi_impl.o");
   end Linker;

   package Builder is
      for Switches ("ada") use ("-j4", "-C", "-s");
   end Builder;

   package Compiler is
      for Switches ("ada") use ("-fPIC", "-O");
   end Compiler;

end TextProcs;

